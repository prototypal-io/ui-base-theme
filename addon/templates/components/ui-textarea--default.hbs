<div class=":component {{classes.class}} {{classes.size}}">
  <div class="wrapper">
    {{textarea
      id=ids.input
      placeholder=placeholder
      disabled=states.disabled
      focusIn=onFocusIn
      focusOut=onFocusOut
      value=value
      aria-labelledby=ids.label
      class=(concat "ui-textarea--default--input "
             (ui-state states 'disabled' 'error' el='ui-textarea--default--input')
            )
      rows=rows
      focus-out=focus-out}}
  </div>
</div>
