{{#if onclick}}
  {{#ui-button-group size=size id=targetId as |group|}}
    {{#group.button
      disabled=states.disabled
      loading=states.loading
      onclick=onclick}}
        {{yield}}
    {{/group.button}}

    {{#group.button
      disabled=states.disabled
      onclick=popup.toggle
      active=states.active}}
        {{ui-icon
          icon="dropbutton"
          class=(concat "ui-dropbutton-trigger--icon "
            (ui-state states 'disabled' el='ui-dropbutton-trigger--icon')
          )
        }}
    {{/group.button}}
  {{/ui-button-group}}

{{else}}
  {{#ui-button
    disabled=states.disabled
    loading=states.loading
    size=size
    id=targetId
    onclick=popup.toggle
    active=states.active}}
      {{yield}}
      {{ui-icon
        icon="dropbutton"
        class=(concat "ui-dropbutton-trigger--icon "
          (ui-state states 'disabled' el='ui-dropbutton-trigger--icon')
        )
      }}
  {{/ui-button}}
{{/if}}
