{{#if onclick}}
  {{#ui-button-group size=size buttonGroupId=targetId as |group|}}
    {{#group.button
      disabled=states.disabled
      loading=states.loading
      onclick=onclick}}
        {{yield}}
    {{/group.button}}

    {{#group.button
      disabled=states.disabled
      onclick=popup.toggle
      active=states.active}}
        {{ui-icon
          icon="dropbutton"
          class=(concat "icon "
            (ui-state states "disabled" el="icon")
          )
        }}
    {{/group.button}}
  {{/ui-button-group}}

{{else}}
  {{#ui-button
    disabled=states.disabled
    loading=states.loading
    size=size
    buttonId=targetId
    onclick=popup.toggle
    active=states.active}}
      {{yield}}
      {{ui-icon
        icon="dropbutton"
        class=(concat "icon "
          (ui-state states "disabled" el="icon")
        )
      }}
  {{/ui-button}}
{{/if}}
